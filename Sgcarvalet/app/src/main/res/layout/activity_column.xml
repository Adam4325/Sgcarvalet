<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_column"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/HAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_secondary_text_material_light"
        android:text="Address"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/HLTD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_secondary_text_material_light"
        android:text="LONGITUDE"
        android:layout_below="@+id/HLNG"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/HLNG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LATITUDE"
        android:textColor="@color/abc_secondary_text_material_light"
        android:layout_below="@+id/HAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textColor="@color/abc_secondary_text_material_light"
        android:id="@+id/HWaktu"
        android:padding="5dp"
        android:layout_below="@+id/HLTD"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/id_mapss"
        android:visibility="gone"
        android:layout_alignBottom="@+id/HWaktu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
