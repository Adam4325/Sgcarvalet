<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/loginsg">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="85dip"
        android:background="@drawable/regsiter"
        android:id="@+id/linearLayout4"
        android:padding="5dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/txtEmail"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:hint="E-mail"
            android:textColor="#000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:id="@+id/txtPassword"
            android:hint="Password"
            android:textColor="#000" />
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/mgLogin"
        android:layout_alignTop="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="86dp"
        android:background="@drawable/btn_login"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:id="@+id/textView5"
        android:textColor="#FFF"
        android:layout_marginTop="154dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don&apos;t have account?"
        android:id="@+id/textView6"
        android:textColor="#FFF"
        android:textSize="14dip"
        android:layout_alignTop="@+id/txtRegister"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register?"
        android:textSize="14dip"
        android:id="@+id/txtRegister"
        android:textColor="#ffffc824"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/mgLogin"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

</RelativeLayout>



